                <Label Canvas.Left="20" Canvas.Top="30" Content="Selectaţi un nivel." Height="32" FontFamily="Times New Roman" FontSize="20" Foreground="#FF78200F" Width="159" />
                <Button Canvas.Left="20" Canvas.Top="70" Content="1" Height="75" Name="button1" Width="75" FontFamily="Times New Roman" FontStyle="Italic" FontSize="36" Style="{StaticResource btnGlass4}" Foreground="#FFFFFFD3" Background="#FF78200F" />
